<Window x:Class="Letters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Letters"
        mc:Ignorable="d"
        KeyUp="Window_KeyUp"
        Title="Cijfers en Letters (Letters)" 
        Height="450" 
        Width="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Name="LettersPanel" 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Grid.Row="1">
    </StackPanel>

    <StackPanel Name="GameButtonsPanel"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Grid.Row="2">
      <Button Name="VowelButton"
              Click="VowelButton_Click"
              Content="Klinker"
              Height="40"
              Width="75"
              Margin="0,0,20,0"/>
      <Button Name="ConsonantButton"
              Click="ConsonantButton_Click"
              Content="Medeklinker"
              Height="40"
              Width="75"/>
    </StackPanel>

    <StackPanel Name="WordPanel" 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Visibility="Hidden"
                Grid.Row="3">
    </StackPanel>

    <StackPanel Name="ResultStackPanel"
                Orientation="Vertical"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Visibility="Hidden"
                Grid.Row="4">
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Het woord is "
                   FontSize="20"
                   FontWeight="Bold"/>
        <TextBlock Name="ResultTextBlock"
                   FontSize="20"
                   FontWeight="Bold"/>
      </StackPanel>

      <StackPanel Name="ProposeStackPanel"
                  Orientation="Horizontal"
                  Margin="0,20,0,0"
                  Visibility="Hidden">
        <TextBlock Text="Een langer woord is "/>
        <TextBlock Name="ProposeWordTextBlock"/>
      </StackPanel>
      
    </StackPanel>

    <StackPanel Orientation="Vertical"
                VerticalAlignment="Bottom"
                Width="200"
                Grid.Row="5">
      
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Ronde: "
                   FontSize="20"
                   Margin="10,0,0,0"
                   Width="150"/>
        <TextBlock Name="GamePlayTextBlock" 
                   Text="1"
                   FontSize="20"
                   FontWeight="Bold"/>
      </StackPanel>

      <Border Name="LeftBorder"
              Background="LightSalmon">
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Score links: "
                     FontSize="20"
                     Margin="10,0,0,0"
                     Width="150"/>
          <TextBlock Name="GameScoreLeftTextBlock" 
                     Text="0"
                     FontSize="20"
                     FontWeight="Bold"/>
        </StackPanel>
      </Border>

      <Border Name="RightBorder">
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Score rechts: "
                     FontSize="20"
                     Margin="10,0,0,0"
                     Width="150"/>
          <TextBlock Name="GameScoreRightTextBlock" 
                     Text="0"
                     FontSize="20"
                     FontWeight="Bold"/>
        </StackPanel>
      </Border>

    </StackPanel>

  </Grid>
</Window>
